<Window x:Class="Geoapify.NET.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Geoapify.NET.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="Visibility"/>
    </Window.Resources>
        <Grid>
        <ProgressBar Height="30" IsIndeterminate="True" Visibility="{Binding IsBusy,Converter={StaticResource Visibility}}" />
        <ComboBox Height="30" Opacity="0.5" IsEditable="True" Text="{Binding Query, Delay=200}" ItemsSource="{Binding Addresses}"/>
    </Grid>
</Window>
